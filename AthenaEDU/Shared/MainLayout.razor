@inherits LayoutComponentBase
@inject UserService userService;
@inject NavigationManager navigationManager;

<PageTitle>AthenaEDU</PageTitle>

<MudThemeProvider Theme="@CustomTheme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5" Class="ml-3">AthenaEDU</MudText>
        <MudSpacer />
        <MudButton hidden="@isAuth()" OnClick="NavigateToAuth" Variant="Variant.Filled" Color="Color.Secondary" Style="color: #7c73c3; margin-right: 1rem">Войти</MudButton>
        <MudButton hidden="@isAuth()" OnClick="NavigateToRegistration" Variant="Variant.Filled" Color="Color.Secondary" Style="color: #7c73c3">Зарегистрироваться</MudButton>
        <MudIconButton hidden="@(!isAuth())" OnClick="NavigateToProfile" Icon="@Icons.Material.Filled.AccountCircle" Size="Size.Large" Color="Color.Inherit" Edge="Edge.End" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Variant="@DrawerVariant.Temporary" Elevation="1" Color="Color.Primary">
        <NavMenu></NavMenu>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {

    public bool isAuth()
    {
        return userService.CurrentUser is not null;
    }

    MudTheme CustomTheme = new MudTheme
        {
            Palette = new Palette
            {
                Primary = "#7c73c3",
                Secondary = "#fafafa",
                Dark = "#bbb1ff",
                AppbarBackground = "#7c73c3",
                Info = "#7c73c3"
            }
        };

    bool _drawerOpen = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    public void NavigateToRegistration()
    {
        navigationManager.NavigateTo("registrationPage");
    }

    public void NavigateToAuth()
    {
        navigationManager.NavigateTo("authPage");
    }

    public void NavigateToProfile()
    {
        navigationManager.NavigateTo("profilePage");
    }
}
