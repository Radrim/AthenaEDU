@inject UserService userService

<MudNavMenu Color="Color.Secondary" Style="font-size: 20px; margin-top: 1rem;">
    <MudNavLink Href="/" Match="NavLinkMatch.All">Главная</MudNavLink>
    @if (userService.CurrentUser != null && userService.CurrentUser.Role == "User")
    {
        <MudNavGroup Title="Курсы">
            <MudNavLink Href="/activeCourses" Match="NavLinkMatch.Prefix">Активные курсы</MudNavLink>
            <MudNavLink Href="/myCourses" Match="NavLinkMatch.Prefix">Мои курсы</MudNavLink>
            <MudNavLink Href="/createCourse" Match="NavLinkMatch.Prefix">Создать курс</MudNavLink>
        </MudNavGroup>
    }

    @if (userService.CurrentUser != null && userService.CurrentUser.Role == "Admin")
    {
        <MudNavLink Href="/createCategory" Match="NavLinkMatch.Prefix">Создать категорию</MudNavLink>
        <MudNavLink Href="/courseRequest" Match="NavLinkMatch.Prefix">Заявки</MudNavLink>
    }
</MudNavMenu>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
